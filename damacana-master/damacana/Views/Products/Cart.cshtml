@using Damacana.Models
@model List<Damacana.Models.Product>
 @using System.Collections.Generic
   

<body style="background-image:url(http://www.islamekseni.com/sitebuildercontent/sitebuilderpictures/selaleresimleri6.jpg)">

    <h2 style="color:white">My Cart</h2>
    <br>
    @foreach (var p in Model)
    {
        <table style="width:100%">
            <tr>

                <td>
                    <div class="alert alert-success" role="alert">
                        <h4 class="media-heading">@p.Name</h4>
                        <b>@p.Price TL</b>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a class="btn bn btn-danger" href="@Url.Action("DeleteFromCart", new { Name = p.Name})"><b>RemoveFromCart</b></a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a class="btn btn btn-info" href="@Url.Action("NewProduct", new { Name = p.Name})"><b>NewProduct</b></a>
                    </div>
                </td>
                <td></td>
            </tr>
        </table>
    }
    <a class="btn btn-primary btn-block" href="@Url.Action("Purchase","Cart", new { x = Model })"><b>Go to buying</b></a>
    <ul class="pager">
        <li><a href="@Url.Action("Index","Products")">Return to Product</a></li>
    </ul>
</body>
